<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actorcharan" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Charan" />
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="30" type="int"/>
    </bean>
    <bean id="actorkarthikeya" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="karthikeya"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="30" type="int"/>
    </bean>
    <bean id="actorMahesh" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Mahesh"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="30" type="int" />
    </bean>

<bean name="movieA,movieB" class="com.stackroute.domain.Movie"  scope="prototype">
    <constructor-arg name="actor" ref="actorcharan" />
</bean>

</beans>

